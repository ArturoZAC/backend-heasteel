
generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  admin
}

model Project {
  id          String @id @default(uuid())
  title        String
  image       String
}

model User     {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String
  role     Role   @default(admin)
}
